---
import { Image } from 'astro:assets';
import { profile } from '@/settings.ts';
import SocialIcons from './SocialIcons.astro';
import DarkLightController from './DarkLightController.astro';
import ProfilePictures from '@/assets/profile_pictures.png';
import { getCollection } from 'astro:content';
import { template } from '@/settings';

const isBlogPopulated = await getCollection('blog').then(
  (collection) => collection.length > 0
);

const { fullName, title } = profile;
---

<aside
  class="px-4 pt-4 h-screen w-[20rem] bg-base-200 text-base-content flex flex-col"
>
  <div class="flex flex-col my-8 justify-between h-full">
    <div>
      <div class="flex justify-center items-center flex-col relative">
        <div class="relative">
          <Image
            class="mask mask-circle size-44"
            src={ProfilePictures}
            alt={`Photo de profil de ${fullName}`}
          />
          <div class="absolute -top-2 -right-2">
            <DarkLightController />
          </div>
        </div>
        <h1 class="text-lg font-black mt-8 hidden lg:block">
          {title}
          <span>{fullName}</span>
        </h1>
      </div>
      <div class="mx-4 mt-4">
        <ul class="space-y-4 menu grow shrink menu-md overflow-y-auto">
          <li>
            <a href={`${template.base}/`} class="text-lg">Accueil</a>
          </li>
          <li>
            <a href={`${template.base}/cv`} class="text-lg">CV</a>
          </li>
          {
            isBlogPopulated && (
              <li>
                <a href={`${template.base}/blog/1`} class="text-lg">
                  Blog
                </a>
              </li>
            )
          }
        </ul>
      </div>
    </div>
    <div class="mx-4">
      <SocialIcons />
    </div>
  </div>
</aside>
